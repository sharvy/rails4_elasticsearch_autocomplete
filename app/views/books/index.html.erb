<%= form_tag books_path, method: :get do %>
    <div class="field">
      <%= label_tag :query, 'Search Book' %>
      <%= text_field_tag :query %>
      <%= submit_tag 'Search' %>
    </div>
<% end %>

<% if @books.present? %>
    <h1>Listing books</h1>

    <table>
      <thead>
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Description</th>
        <th>Price</th>
        <th colspan="3"></th>
      </tr>
      </thead>

      <tbody>
      <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.author %></td>
            <td><%= book.description %></td>
            <td><%= book.price %></td>
            <td><%= link_to 'Show', book %></td>
            <td><%= link_to 'Edit', edit_book_path(book) %></td>
            <td><%= link_to 'Destroy', book, method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <br>
<% end %>
<%= link_to 'New Book', new_book_path %>
